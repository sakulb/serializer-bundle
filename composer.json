{
    "name": "sakulb/serializer-bundle",
    "description": "Serializer bundle.",
    "type": "symfony-bundle",
    "keywords": ["symfony", "serializer"],
    "authors": [
        {
            "name": "Lukas",
            "homepage": "https://github.com/sakulb"
        }
    ],
    "require": {
        "php": ">=8.4",
        "ext-json": "*",
        "doctrine/common": "^3.3"
    },
    "require-dev": {
        "doctrine/doctrine-bundle": "^2.18",
        "doctrine/orm": "^3.5",
        "nelmio/api-doc-bundle": "^5.0",
        "slevomat/coding-standard": "^8.14",
        "symfony/dotenv": "^7.3",
        "symfony/test-pack": "^1.1",
        "symfony/uid": "^7.3"
    },
    "suggest": {
        "doctrine/orm": "Enable EntityIdHandler."
    },
    "autoload": {
        "psr-4": {
            "Sakulb\\SerializerBundle\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sakulb\\SerializerBundle\\Tests\\": "tests",
            "Sakulb\\SerializerBundle\\Tests\\TestApp\\": "tests/TestApp"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false
        }
    }
}
